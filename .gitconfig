[include]
	path = .gitconfig.local
[color]
    branch = auto
    diff = auto
    interactive = auto
    pager = true
    status = auto
    ui = true
[color "status"]
    added = green
    changed = yellow
    untracked = red
[push]
    default = current
[core]
    autocrlf = input
	editor = vi
    pager = less -SE
[alias]
    ci = commit
    cm = commit -m 
    co = checkout
	ba = branch -a
	br = branch
    st = status -b
    lo = log --oneline
    lg = log --graph --pretty=format:'%C(bold red)%h%C(reset) ---%C(yellow)%d%C(reset) %s %C(bold green)(%cr)%C(reset) %C(bold blue)by%C(reset) %cn, %cE'
    pur = pull --rebase
	cah = commit --amend --no-edit
	cano = commit --amend --no-edit
